<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/fundo"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portal dos Imóveis"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O que você precisa?"
                android:gravity="center"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="#f1c606"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rdoAlugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alugar um imóvel"
                    android:textStyle="bold"
                    android:textColor="#f18818"
                    android:textSize="25sp"
                    android:padding="5dp"
                    />
                <RadioButton
                    android:id="@+id/rdoComprar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comprar um imóvel"
                    android:textStyle="bold"
                    android:textColor="#f18818"
                    android:textSize="25sp"
                    android:padding="5dp"
                    />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade de quartos"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                >
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <RadioButton
                        android:id="@+id/rdo1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:text="1"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#f18818"
                        />
                    <RadioButton
                        android:id="@+id/rdo2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:text="2"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#f18818" />
                    <RadioButton
                        android:id="@+id/rdo3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:text="3"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#f18818" />
                    <RadioButton
                        android:id="@+id/rdo4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="15dp"
                        android:text="4"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:textColor="#f18818" />

                </RadioGroup>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1">


                    <EditText
                        android:id="@+id/edtBairro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Bairro"
                        android:textSize="25sp"
                        android:textColor="#000000"
                        >

                    </EditText>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/edtCidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Cidade"
                        android:textSize="25sp"
                        android:textColor="#000000"/>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnPesquisar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="Pesquisar"
                        android:textSize="30sp"
                        android:textColor="#f1c606"
                        android:textStyle="bold"
                        android:onClick="btnPesquisarClick"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">
                    <Button
                        android:id="@+id/btnAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cadeado"
                        android:onClick="btnAdminClick"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>
